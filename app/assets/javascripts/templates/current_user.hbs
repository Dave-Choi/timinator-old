{{#if isLoggedIn}}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            {{email}} <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            <li><a {{action "logout"}} rel="nofollow">Log Out</a></li>
        </ul>
    </li>

{{else}}
    <li>{{#linkTo "register"}}Sign Up{{/linkTo}}</li>
    {{render "login"}}
{{/if}}